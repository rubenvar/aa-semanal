:root
  box-sizing border-box
  font-size 62.5%
  --radius10 6px

*
*::before
*::after
  margin 0
  padding 0
  box-sizing inherit

body
  height 100vh
  min-height 100vh
  // base reset
  background white
  color black
  font-size 2.2rem
  font-family -apple-system, BlinkMacSystemFont, 'Open Sans', 'Helvetica Neue', sans-serif

#inner
  height 100%
  display grid
  align-items center
  justify-items center

main
  width 60%

h1
  color darkorange
  text-align center
  font-size 6rem

p
  text-align center

#form
  margin 50px 0
  #fields
    display flex
    justify-content center
    input
    button
      font-family inherit
      font-size inherit
      border-radius var(--radius10)
    input
      border 2px solid teal
      padding 8px 20px
      border-radius var(--radius10) 0 0 var(--radius10)
      box-shadow inset 0 2px 3px hsla(0, 0%, 0%, 0.2)
    button
      border 2px solid teal
      border-left none
      background teal
      color white
      padding 8px 16px
      border-radius 0 var(--radius10) var(--radius10) 0
      cursor pointer
      transition all 0.3s
      &:hover
        background white
        color teal
  p
    color darkgrey
    font-size 1.4rem
    margin-top 7px
    line-height 1.3

#text
  p
    margin-bottom 7px
    color #444