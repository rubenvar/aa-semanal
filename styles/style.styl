
:root
  box-sizing border-box
  font-size 62.5%

  --radius10 6px
  
  --fz10 1.2rem
  --fz20 1.4rem
  --fz30 2.2rem
  --fz40 2.75rem
  --fz100 5.5rem

  --gap10 2px
  --gap20 7px
  --gap30 16px
  --gap40 27px
  --gap50 35px
  --gap60 50px

*
*::before
*::after
  margin 0
  padding 0
  box-sizing inherit

body
  height 100vh
  min-height 100vh
  // base reset
  background white
  color black
  font-size var(--fz30)
  font-family 'Rubik', sans-serif
  font-weight 300
  position relative

#inner
  height 100%
  display grid
  align-items center
  justify-items center

main
  width 80%
  display grid
  justify-items center

h1
  color darkorange
  text-align center
  font-size var(--fz100)
  line-height 1
  font-weight 500
  margin-bottom 30px
  font-family 'Maven Pro', sans-serif

h2
  font-weight 400
  text-align center
  max-width 80%
  font-size var(--fz40)
  color #888

p
  text-align center

#text
  p
    margin-bottom 7px
    color #444

footer
  position absolute
  bottom 0
  right 0
  left 0
  margin-right auto
  margin-left auto
  padding 7px 0
  p
    font-size var(--fz10)
    color #999
    text-align center
    margin-bottom 2px
    &:last-child
      margin-bottom 0
    a
      color #aaa
      text-decoration underline
      text-decoration-style dashed

@import './form.styl'
@import './error.css'