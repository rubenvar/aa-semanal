#form
  margin var(--gap60) 0
  border-radius 14px
  ._form-content
    display flex
    justify-content center
    ._field-wrapper
      position relative
    input
    button
      font-family inherit
      font-size inherit
      font-weight inherit
      border-radius var(--radius10)
      padding var(--gap20) var(--gap30)
    input
      border 2px solid teal
      border-radius var(--radius10) 0 0 var(--radius10)
      box-shadow inset 0 2px 3px hsla(0, 0%, 0%, 0.2)
    button
      border 2px solid teal
      border-left none
      background teal
      color white
      border-radius 0 var(--radius10) var(--radius10) 0
      cursor pointer
      transition all 0.3s
      &:hover
        background white
        color teal
  p
    color darkgrey
    font-size var(--fz20)
    margin-top var(--gap20)
    line-height 1.3

  ._form-thank-you
    text-align center
    margin-bottom var(--gap30)
    color teal
